<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.owlvation.project.genedu.Tool.CodeScanner.CodeScannerActivity">

    <RelativeLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/background_rounded_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:src="@drawable/ic_back"
            app:tint="@color/white" />

        <RelativeLayout
            android:id="@+id/layoutTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/ic_tr"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_scannercode" />

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/ic_tr"
                android:text="@string/title_scanner_code"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/ubuntu_bold"/>
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/captureCode"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_scanner"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/layoutTitle"
        app:layout_constraintBottom_toTopOf="@+id/detectedTextResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/detectedTextResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/your_result_appear_here"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="14sp"
        android:fontFamily="@font/ubuntu_regular"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/captureCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/pickCode"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/background_button_filled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detectedTextResult">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_add_image"
            android:background="@drawable/background_button_filled"
            android:scaleType="centerCrop"
            android:padding="10dp"
            app:tint="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pick_image"
            android:fontFamily="@font/ubuntu_medium"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/scan"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/background_button_filled"
        app:layout_constraintTop_toBottomOf="@+id/pickCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/copyText">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_detect"
            android:background="@drawable/background_button_filled"
            android:scaleType="centerCrop"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detection"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/copyText"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/background_button_filled"
        app:layout_constraintTop_toBottomOf="@+id/pickCode"
        app:layout_constraintStart_toEndOf="@+id/scan"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_copy"
            android:background="@drawable/background_button_filled"
            android:scaleType="centerCrop"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/copy"
            android:fontFamily="@font/ubuntu_medium"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/white"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
